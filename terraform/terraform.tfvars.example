# ============================================================================
# HCP Terraform Configuration
# ============================================================================
tf_organization_name = "rahul-tfc"
tfc_project_name     = "terraform-actions-aap-gcp"
tfc_workspace_name   = "tf-actions-aap-gcp"

# GitHub OAuth Configuration
github_token = "ghp_xxxxxxxxxxxxx"  # GitHub Personal Access Token
github_repo  = "your-org/tf-actions-aap-gcp"

# ============================================================================
# GCP Configuration
# ============================================================================
gcp_project_id = "your-gcp-project-id"
gcp_region     = "us-central1"
gcp_zone       = "us-central1-a"

# VM Configuration
vm_count        = 2
vm_machine_type = "e2-medium"

# ============================================================================
# Vault Configuration
# ============================================================================
vault_addr = "https://your-vault-cluster.vault.hashicorp.cloud:8200"

# Note: vault_token should be set via environment variable VAULT_TOKEN
# or passed securely. Do not commit actual tokens to version control.

# ============================================================================
# AAP Configuration
# ============================================================================
aap_hostname        = "https://your-aap-server"
aap_job_template_id = 9

# ============================================================================
# Resource Labels
# ============================================================================
environment = "demo"
